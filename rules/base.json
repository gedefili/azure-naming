{
  "metadata": {
    "name": "Base naming rules",
    "priority": 0,
    "description": "Default SanMar naming rule set."
  },
  "default": {
    "segments": [
      "slug",
      "system",
      "subsystem",
      "domain",
      "subdomain",
      "environment",
      "region",
      "index"
    ],
    "max_length": 80,
    "require_sanmar_prefix": false,
    "name_template": "{region}-{environment}-{slug}-{system}{subsystem_segment}{index_segment}",
    "display": [
      { "key": "name", "label": "Resource Name", "optional": false },
      { "key": "resourceType", "label": "Resource Type", "optional": false },
      { "key": "slug", "label": "Slug", "optional": false },
      { "key": "region", "label": "Region", "optional": false },
      { "key": "environment", "label": "Environment", "optional": false },
      { "key": "system", "label": "System" },
      { "key": "index", "label": "Index" }
    ]
  }
}
