{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Local Azure Functions",
      "type": "python",
      "request": "attach",
      "host": "localhost",
      "port": 5678,
      "justMyCode": false,
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "."
        }
      ],
      "preLaunchTask": "dev:start-local-stack",
      "postDebugTask": "terminate-local-stack"
    },
    {
      "name": "Attach to Python Functions",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 9091
      },
      "preLaunchTask": "func: host start"
    }
  ]
}